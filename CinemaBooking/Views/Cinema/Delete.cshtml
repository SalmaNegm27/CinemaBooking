@model Cinema
@{
    ViewData["Title"] = "Delete Actor";
}
<div class="container">
    <div class="card">
        <div class="card-body">
            <form asp-action="Delete">
            <h3>Delete Cinema @Model.Name</h3>

                <div class="form-group d-flex justify-content-center">
                    <img class="border-info rounded-circle" style="max-width: 150px" id="ProfilePicturePreview" src="~/Images/@Model.Logo" />
                </div>

                <div class="form-group col-md-12">
                    <label asp-for="Logo" for="formFile" class="control-label">Cinema Logo</label>
                    <input asp-for="Logo" class="form-control" readonly>
                </div>

                <div class="form-group col-md-12">
                    <label asp-for="Name" for="validationCustom01" class="form-label">Name</label>
                    <input asp-for="Name" type="text" class="form-control" id="validationCustom01">
                </div>

                <div class="form-group col-md-12">
                    <label asp-for="Descripition" for="validationCustom02" class="form-label">Descripition</label>
                    <input asp-for="Descripition" type="text" class="form-control" id="validationCustom02">
                </div>

                <div class="form-group col-md-12 mt-3 d-flex justify-content-center">
                    <form asp-action="Delete">
    <input type="hidden" asp-for="ID"/>
    <input type="submit"value="Confirm" class="btn btn-danger float-right"/>
                    </form>
                   
                </div>

            </form>
        </div>
    </div>
</div>

@section Scripts{
    <script>
        $(document).ready(function() {
            var imagePath = $("#ProfilePicturePreview").attr("src");
            $("#ProfilePicturePreview").attr("src", imagePath);
        });
    </script>
}


@model Movie


@{
    ViewData["Title"] = "Adding Producer";
}
<div class="container">
    <div class="card">
        <div class="card-body">
            <form asp-action="Create" class="row g-3" enctype="multipart/form-data">
                <div asp-validation-summary="ModelOnly" class="text-danger">
                </div>
                   <div class="form-group col-md-12">
                        <label asp-for="Name" for="validationCustom01" class="form-label">Name</label>
                        <input asp-for="Name" type="text" class="form-control" id="validationCustom01" value="">
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-12">
                        <label asp-for="Description" for="validationCustom02" class="control-label">Bio</label>
                        <input asp-for="Description" type="text" class="form-control" id="validationCustom02" value="">
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-12">
                        <label asp-for="ImagePath" for="validationCustom02" class="control-label">Actor Image</label>
                        <input asp-for="ImagePath" accept="image/*">
                        <span asp-validation-for="ImagePath" class="text-danger"></span>
                    </div>
                    <div class="form-group col-md-12">
                        <label asp-for="Price" for="validationCustom02" class="control-label">Actor Image</label>
                        <input asp-for="Price" type="number">
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>
                     <div class="form-group col-md-12">
                        <label asp-for="StartDate" for="validationCustom02" class="control-label">Actor Image</label>
                        <input asp-for="StartDate" accept="image/*">
                        <span asp-validation-for="StartDate" class="text-danger"></span>
                    </div>

                    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
                    <div>
                        <img id="output" width="200"/>
                    </div>

                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-outline-success float-right" />
                        <a class="btn btn-outline-secondary" asp-action="Index">Show All</a>
                    </div>
            </form>
        </div>
    </div>
</div>



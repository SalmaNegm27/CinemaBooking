@model Movie

@{
    ViewData["Title"] = "Movie Detail";
}

<div class="container">

    <div class="text-center  mt-2" style="padding:20px;background-color:azure">
        <h3 class="text-capitalize">@Model.Description</h3>
    </div>

    <div class="form-group col-md-12">
        <label asp-for="Name" for="formFile" class="control-label">Movie Name</label>
        <input asp-for="Name" class="form-control" readonly>
    </div>

    <div class="form-group col-md-12">
        <label asp-for="StartDate" for="validationCustom01" class="form-label">Start Dte</label>
        <input asp-for="StartDate" type="text" class="form-control" id="validationCustom01" readonly>
    </div>

    <div class="form-group col-md-12">
        <label asp-for="EndDate" for="validationCustom02" class="form-label">End Date</label>
        <input asp-for="EndDate" type="text" class="form-control" id="validationCustom02" readonly>
    </div>

    <div class="form-group col-md-12">
        <label asp-for="Price" for="validationCustom02" class="form-label">Price</label>
        <input asp-for="Price" type="text" class="form-control" id="validationCustom02" readonly>
    </div>

     <div class="form-group col-md-12">
        <label asp-for="MovieCategory" for="validationCustom02" class="form-label">MovieCategory</label>
        <input asp-for="MovieCategory" type="text" class="form-control" id="validationCustom02" readonly>
    </div>

     <div class="form-group col-md-12">
        <label asp-for="Cinema.Name" for="validationCustom02" class="form-label">Cinema Name</label>
        <input asp-for="Cinema.Name" type="text" class="form-control" id="validationCustom02" readonly>
    </div>
    <div class="d-flex justify-content-center mt-2">

  <button class="btn btn-success">Add To Cart</button>
</div>
    

</div>